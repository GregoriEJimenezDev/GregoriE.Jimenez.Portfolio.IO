---
import Layout from "../layouts/Layout.astro";
import CopyMail from "../components/links/copyMail.jsx";

const links = [
  {
    href: "https://www.linkedin.com/in/gregori-evangelista-jimenez-5a077932b/",
    label: "LinkedIn",
  },
  { href: "https://github.com/grego78887", label: "GitHub" },
  { href: "mailto:gregorievangelista43@gmail.com", label: "Email" },
];
---

<Layout>
  <section
    class="bg-gray-900 flex min-h-screen flex-col items-center justify-center px-6"
  >
    <div class="mb-8 mt-11">
      <h1 class="text-4xl font-bold text-white text-center">Â¡Contacta conmigo!</h1>
    </div>

    <CopyMail client:visible />

    <!-- Lista de Links -->
    <div class="w-full max-w-xl space-y-4">
      {
        links.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="block font-bold w-full rounded-lg bg-primary hover:bg-secondary drop-shadow-[2px_2px_0_#0debd8] px-6 py-3 text-center text-white transition "
          >
            {link.label}
          </a>
        ))
      }
    </div>
  </section>
</Layout>

<style>
  .animate-spin-slow {
    animation: spin 25s linear infinite;
  }

  @keyframes spin {
    100% {
      transform: rotate(360deg);
    }
  }
</style>